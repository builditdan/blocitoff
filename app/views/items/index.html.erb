<% if @item.errors.any? %>

      <div class="alert alert-danger">

        <h4><%= pluralize(@item.errors.count, "error") %>.</h4>
        <ul>
          <% @item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
      </div>

<% end %>


 <div class="row">
     <div class="col-md-12">
         <h3>Your To-Do List</h3>
         <table class="table table-bordered table-striped">
           <thead>
             <tr>
               <th>Description</th>
               <th>Days left</th>
               <th>Complete</th>
             </tr>
           </thead>
           <tbody class="js-items">
                <% @items.each do |item| %>
                      <%= render partial: 'items/item', locals: {item: item} %>
                <% end %>
          </tbody>
        </table>
     </div>
<%# if policy(@items).new? %>

<div class="row">
    <div class="col-md-8">
      <%= render partial: 'items/form', locals: {item: @item} %>
    </div>
</div>

<br>
